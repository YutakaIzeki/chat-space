
.wrapper

  = render partial: "shared/side_bar"

  .main
    .main-header
      .main-header__left-box
        %h2.main-header__left-box__current-group
          = @group.name
        %ul.main-header__left-box__member-list
          Member :
          - @group.users.each do |user|
            = user.name
      .main-header__edit-btn
        = link_to "Edit", edit_group_path(@group.id)


    .messages
      = render partial: "message"
      = render partial: "message"

    .form
      .new-message
        .input-box
          %form
            %input{placeholder:"type a message",type:"text", class: "input-box__text"}
            %label.input-box__upload-label{for: "message_image"}
              %i.fa.fa-picture-o
              / = f.file_field :image, id: "upload-icon"
              %input{type:"file", class:"image_submit", id:"message_image"}
        %input{type: "submit", value: "Send", class: "submit-btn"}



